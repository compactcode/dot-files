#html
snippet html
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="utf-8" />
	</head>
	<body>
		<div class="container">
			${1}
		</div>
	</body>
	</html>
snippet h1
	<h1>${1}</h1>
snippet h2
	<h2>${1}</h2>
snippet h3
	<h3>${1}</h3>
snippet p
	<p>${1}</p>
snippet div
	<div>${1}</div>
snippet span
	<span>${1}</span>

#rails
snippet =
	<%= ${1} %>
snippet link
	<%= link_to '${1}', ${2} %>
snippet js
	<%= javascript_include_tag '${1}' %>
snippet css
	<%= stylesheet_link_tag '${1}' %>
