{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Other_64",
    "iso_url": "https://channels.nixos.org/nixos-20.09-small/latest-nixos-minimal-x86_64-linux.iso",
    "iso_checksum": "348ab2d0733eadac8abd30eac9b2457d933dd01e4d07eee3dfd805e05376fa3f",
    "disk_size": 16000,
    "boot_wait": "5s",
    "boot_command": [
      "<enter>",
      "<wait40s>",
      "passwd<enter><wait>",
      "secret<enter><wait>",
      "secret<enter><wait>",
      "systemctl start sshd<enter><wait>",
      "secret<enter><wait>"
    ],
    "iso_interface": "sata",
    "hard_drive_interface": "sata",
    "hard_drive_nonrotational": "true",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", 4000],
      ["modifyvm", "{{.Name}}", "--cpus", 2],
      ["modifyvm", "{{.Name}}", "--firmware", "efi"],
      ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
      ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
    ],
    "vm_name": "nix_vm",
    "ssh_username": "nixos",
    "ssh_password": "secret",
    "shutdown_command": "shutdown -P now",
    "post_shutdown_delay": "10s"
  }],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "INSTALL_DRIVE_NAME=/dev/sda",
        "INSTALL_DRIVE_PASSWORD='secret'"
      ],
      "scripts": [
        "bin/prepare-uefi-filesystem.sh"
      ]
    },
    {
      "type": "file",
      "source": "nixos/",
      "destination": "/mnt/etc/dotfiles/nixos/"
    },
    {
      "type": "shell",
      "scripts": [
        "bin/install-channels.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "bin/install-nixos.sh"
      ]
    }
  ]
}
